{
  "name": "stock-ticker",
  "version": "1.0.0",
  "private": true,
  "description": "Demo app using WebSockets to display real-time stock info",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && concurrently --kill-others-on-fail \"npm run build-sass\" \"npm run build-ts && npm run build-js\"",
    "build-sass": "node-sass -o ../gh-pages/assets src",
    "build-ts": "tsc",
    "build-js": "browserify index.js > ../gh-pages/assets/app.js",
    "clean": "rimraf ../gh-pages/assets"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "angular": "global:angular",
    "socket.io-client": "global:io"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/process-execution/stock-ticker.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/process-execution/stock-ticker/issues"
  },
  "homepage": "https://github.com/process-execution/stock-ticker#readme",
  "dependencies": {},
  "peerDependencies": {
    "angular": "^1.6.10",
    "socket.io-client": "^1.4.32"
  },
  "devDependencies": {
    "@types/angular": "^1.6.10",
    "@types/socket.io-client": "^1.4.32",
    "browserify": "^16.2.3",
    "browserify-shim": "^3.8.14",
    "concurrently": "^4.0.1",
    "node-sass": "^4.9.3",
    "rimraf": "^2.6.2",
    "typescript": "^3.1.1"
  }
}
